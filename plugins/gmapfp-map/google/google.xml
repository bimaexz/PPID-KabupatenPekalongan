<?xml version="1.0" encoding="utf-8"?>
<extension version="4.0" type="plugin" group="gmapfp-map" method="upgrade">
	<name>plg_gmapfp_map_google</name>
	<namespace>Joomla\Plugin\GmapfpMap\Google</namespace>
	<version>J4.5F</version>
	<creationDate>Juillet 2022</creationDate>
	<author>Fabrice4821</author>
	<authorEmail>support@gmapfp.org</authorEmail>
	<authorUrl>https://creation-web.pro/</authorUrl>
	<copyright>Copyright (C) 2011 - 2019 by GMapFP</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>PLG_GMAPFP_MAP_GOOGLE_XML_DESCRIPTION</description>
	<files>
		<filename plugin="google">google.php</filename>
		<filename>map.xml</filename>
		<folder>Field</folder>
		<folder>tmpl</folder>
	</files>

    <media folder="media" destination="plg_gmapfp-map_google">
        <folder>js</folder>
    </media>

	<languages>
		<language tag="en-GB">language/en-GB/plg_gmapfp-map_google.ini</language>
		<language tag="en-GB">language/en-GB/plg_gmapfp-map_google.sys.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_gmapfp-map_google.ini</language>
		<language tag="fr-FR">language/fr-FR/plg_gmapfp-map_google.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldprefix="Joomla\Plugin\GmapfpMap\Google\Field">
				<field name="gmapfp_plug_config" type="subform"
					formsource="plugins/gmapfp-map/google/map.xml" 
					label="PLG_GMAPFP_MAP_PARAMETER"
					default=""
					filter="raw"/>
			</fieldset>
		</fields>
	</config>
</extension>
